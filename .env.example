# TWLan 2.A3 - 2025 Docker Edition
# Environment Configuration Template
# Copy this file to .env and customize values

# ============================================
# General Settings
# ============================================
TZ=UTC

# ============================================
# Port Mappings
# ============================================
# Legacy Service
TWLAN_LEGACY_PORT=8200

# Modern Database
TWLAN_DB_PORT=3307

# Modern Web Server
TWLAN_WEB_PORT=8080
TWLAN_WEB_SSL_PORT=8443

# Redis Cache
TWLAN_REDIS_PORT=6379

# Admin Panel (phpMyAdmin)
TWLAN_ADMIN_PORT=8100

# Monitoring Services
TWLAN_PROMETHEUS_PORT=9090
TWLAN_GRAFANA_PORT=3000

# ============================================
# Database Configuration
# ============================================
DB_ROOT_PASSWORD=twlan_root_2025
DB_NAME=twlan
DB_USER=twlan
DB_PASSWORD=twlan_secure_2025

# ============================================
# PHP Configuration
# ============================================
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_SIZE=100M
PHP_POST_MAX_SIZE=100M

# ============================================
# Grafana Configuration
# ============================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=twlan_grafana_2025
GF_INSTALL_PLUGINS=redis-app

# ============================================
# phpMyAdmin Configuration
# ============================================
PMA_HOST=twlan-db
PMA_PORT=3306
UPLOAD_LIMIT=100M

# ============================================
# Backup Configuration
# ============================================
BACKUP_SCHEDULE=0 3 * * *
RETENTION_DAYS=7
